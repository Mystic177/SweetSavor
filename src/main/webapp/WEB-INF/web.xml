<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>./common/home.jsp</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <res-ref-name>jdbc/SweetSavor</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>


    <!-- Definizione del filtro -->
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>control.LoginFilter</filter-class>
    </filter>

    <!-- Mappatura del filtro -->
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/common/login.jsp</url-pattern>
    </filter-mapping>
</web-app>
